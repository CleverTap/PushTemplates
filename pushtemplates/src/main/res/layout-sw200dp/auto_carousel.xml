<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/carousel_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="4dp">

    <RelativeLayout
        android:id="@+id/rel_lyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <include layout="@layout/metadata"
            android:id="@+id/metadata"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/metadata"
            android:layout_alignLeft="@id/metadata"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="title"
            android:textSize="10sp"
            android:textAppearance="@style/PushTitle" />

        <TextView
            android:id="@+id/msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_alignLeft="@id/title"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="message"
            android:textSize="10sp"
            android:textAppearance="@style/PushMessage" />

    </RelativeLayout>

    <ViewFlipper
        android:id="@+id/view_flipper"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:layout_below="@id/rel_lyt"
        android:autoStart="true"
        android:inAnimation="@anim/slide_in_right"
        android:outAnimation="@anim/slide_out_left">

        <ImageView
            android:id="@+id/flipper_img1"
            android:layout_width="match_parent"
            android:layout_height="144dp" />

        <ImageView
            android:id="@+id/flipper_img2"
            android:layout_width="match_parent"
            android:layout_height="144dp" />

        <ImageView
            android:id="@+id/flipper_img3"
            android:layout_width="match_parent"
            android:layout_height="144dp" />
    </ViewFlipper>
</RelativeLayout>