<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_view_big"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:clipToPadding="false"
    android:padding="8dp">

    <include
        android:id="@+id/metadata"
        layout="@layout/metadata" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="264dp"
        android:paddingTop="8dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/big_image"
            android:layout_width="match_parent"
            android:layout_weight="4.5"
            android:layout_height="wrap_content"
            android:inAnimation="@anim/slide_in_left"
            android:outAnimation="@anim/slide_out_right"
            />

<!--        <TextView-->
<!--            android:id="@+id/product_description"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_below="@+id/product_name"-->
<!--            android:text="message"-->
<!--            android:gravity="center"-->
<!--            android:textAppearance="@style/PushMessage"-->
<!--            android:layout_weight="0.5"/>-->

        <LinearLayout
            android:id="@+id/buy_price"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_weight="0">
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/product_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Product name"
                android:gravity="center"
                android:textAppearance="@style/PushTitle"
                android:layout_weight="4"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/product_price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="Rs: 5,000,000"
                android:textAppearance="@style/PushTitle"
                android:gravity="center"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/product_action"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@android:color/holo_orange_light"
                android:layout_weight="4"
                android:text="Buy Now"
                android:textAppearance="@style/PushMessage" />
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/buy_price"
            android:layout_marginTop="8dp"
            android:paddingRight="4dp"
            android:paddingLeft="4dp"
            android:orientation="horizontal"
            android:layout_weight="1.5">

            <ImageView
                android:id="@+id/small_image1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="-5dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                />

            <ImageView
                android:id="@+id/small_image2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/small_image3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="-4dp"
                android:layout_weight="1"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>