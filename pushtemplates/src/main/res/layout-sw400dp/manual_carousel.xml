<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_view_big"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="4dp">

    <RelativeLayout
        android:id="@+id/rel_lyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <include
            android:id="@+id/metadata"
            layout="@layout/metadata" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/metadata"
            android:layout_alignLeft="@id/metadata"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="title"
            android:textAppearance="@style/PushTitle" />

        <TextView
            android:id="@+id/msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_alignLeft="@id/title"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="message"
            android:textAppearance="@style/PushMessage" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="232dp"
        android:layout_below="@id/rel_lyt">
        <ImageView
            android:id="@+id/leftArrowPos0"
            android:src="@drawable/pt_arrow_back"
            android:layout_width="47dp"
            android:layout_height="74dp"
            android:layout_centerVertical="true" />
        <ImageView
            android:id="@+id/leftArrowPos1"
            android:visibility="invisible"
            android:src="@drawable/pt_arrow_back"
            android:layout_width="47dp"
            android:layout_height="74dp"
            android:layout_centerVertical="true" />
        <ImageView
            android:id="@+id/leftArrowPos2"
            android:visibility="invisible"
            android:src="@drawable/pt_arrow_back"
            android:layout_width="47dp"
            android:layout_height="74dp"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/rightArrowPos0"
            android:src="@drawable/pt_arrow_forward"
            android:layout_width="47dp"
            android:layout_height="74dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/rightArrowPos1"
            android:visibility="invisible"
            android:src="@drawable/pt_arrow_forward"
            android:layout_width="47dp"
            android:layout_height="74dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />
        <ImageView
            android:id="@+id/rightArrowPos2"
            android:visibility="invisible"
            android:src="@drawable/pt_arrow_forward"
            android:layout_width="47dp"
            android:layout_height="74dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/carousel_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
</RelativeLayout>