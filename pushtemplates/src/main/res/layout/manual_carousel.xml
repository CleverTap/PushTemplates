<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/carousel_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rel_lyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_horizontal"
        android:paddingLeft="@dimen/padding_horizontal"
        android:paddingTop="@dimen/padding_vertical"
        android:paddingEnd="@dimen/padding_horizontal"
        android:paddingRight="@dimen/padding_horizontal"
        android:paddingBottom="@dimen/padding_vertical">

        <include
            android:id="@+id/metadata"
            layout="@layout/metadata" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/metadata"
            android:layout_alignLeft="@id/metadata"
            android:layout_marginTop="@dimen/metadata_title_margin_vertical"
            android:text="title"
            android:textAppearance="@style/PushTitle" />

        <TextView
            android:id="@+id/msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_alignLeft="@id/title"
            android:text="message"
            android:textAppearance="@style/PushMessage" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rel_lyt">

        <ImageView
            android:id="@+id/leftArrowPos0"
            style="@style/ManualCarouselArrowRev" />

        <ImageView
            android:id="@+id/leftArrowPos1"
            style="@style/ManualCarouselArrowRev"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/leftArrowPos2"
            style="@style/ManualCarouselArrowRev"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/rightArrowPos0"
            style="@style/ManualCarouselArrowFwd" />

        <ImageView
            android:id="@+id/rightArrowPos1"
            style="@style/ManualCarouselArrowFwd"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/rightArrowPos2"
            style="@style/ManualCarouselArrowFwd"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/carousel_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
</RelativeLayout>