<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_view_small"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/padding_horizontal"
    android:paddingTop="@dimen/padding_vertical"
    android:paddingRight="@dimen/padding_horizontal"
    android:paddingBottom="@dimen/padding_vertical">


    <ImageView
        android:id="@+id/large_icon"
        android:layout_width="@dimen/large_icon"
        android:layout_height="@dimen/large_icon"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/metadata_title_margin_horizontal"
        android:layout_marginLeft="@dimen/metadata_title_margin_horizontal"
        android:layout_toEndOf="@+id/large_icon"
        android:layout_toRightOf="@+id/large_icon"
        android:orientation="vertical">


        <TextView
            android:id="@+id/msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="message message "
            android:textAppearance="@style/PushMessage" />

        <LinearLayout
            android:id="@+id/icons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/metadata_title_margin_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/small_image1_collapsed"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/small_image2_collapsed"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/small_image3_collapsed"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="centerCrop" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>